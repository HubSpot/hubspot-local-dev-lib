{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals"]
  },
  "include": [
    "api",
    "config",
    "constants",
    "enums",
    "errors",
    "http",
    "lib",
    "models",
    "types",
    "utils"
  ],
  "exclude": ["node_modules", "**/__mocks__/*"]
}
