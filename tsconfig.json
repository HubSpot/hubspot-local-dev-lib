{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "api",
    "config",
    "constants",
    "enums",
    "errors",
    "http",
    "lib",
    "models",
    "types",
    "utils"
  ],
  "exclude": ["node_modules", "**/__tests__/*", "**/__mocks__/*"]
}
